<!-- Product-->
<div class="item">
  <div class="row d-flex align-items-center">
    <div class="col-5">
      <div class="d-flex align-items-center"><%= image_tag guest_wish_item.variant.images.first, alt: "...", class: "img-fluid" %>
        <div class="title"><a href="<%= url_for(guest_wish_item.product)<<"?variant=#{guest_wish_item&.variant_id}" %>">
            <h5><%= guest_wish_item.product.name %></h5><span class="text-muted">Size: Large</span></a></div>
      </div>
    </div>
    <div class="col-2"><span><%= number_to_currency(guest_wish_item.variant.price) %></span></div>
    <%= link_to guest_wish_item_url(guest_wish_item), method: :delete do %>
    <div class="col-1 text-center"><i class="delete fa fa-trash"></i></div>
    <% end %>
  </div>
</div>
